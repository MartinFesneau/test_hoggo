<div class="container">
  <div class="row">
    <div class="col-12 col-md-12">
      <h1 class="mt-3 title">Welcome to the Hoggo content creator tool</h1>
      <h4 class="mt-3 title">Choose a subject, enter a source and use our tool to rewrite it</h4>
      <h5 class="mt-3">List of existing subjects: </h5>
      <% if @subjects.count.zero? %>
        <p>No subjects yet, add a new one !</p>
      <% else %>
      <ul class="list-group mt-3">
      <% @subjects.each do |subject| %>
        <li class="list-group-item list-group-item-action mt-1 d-flex justify-content-between">
          <%= link_to subject.name, subject_path(subject.id)  %>
          <div class="delete">
          <%= link_to subject_path(subject),
                    method: :delete,
                    remote: true,
                    :data => { :confirm => "Are you sure you want to delete the subject '#{subject.name}' ?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
          </div>
        </li>
      <% end %>
      </ul>
      <% end %>
      <h5 class="mt-5">Didn't find the subject you were looking for ? Create a new one:</h5>
      <%= render "subject_form" %>
    </div>
  </div>
</div>